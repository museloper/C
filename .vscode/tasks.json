{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },

        // save and compile .c
        {
            "label": "save and compile for C",

            // 해당 작업을 프로세스로 진행할 것인지 vscode 내의 shell에서 진행할 것인지
            "type": "shell",
            // "type": "process",
            
            "command": "gcc",
            
            // "-g": 바이너리 파일에 디버깅 정보 삽입
            // "-o": 출력파일의 이름을 정의
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/../exe/${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        // run .exe
        {
            "label": "run .exe",
            "type": "shell",
            "command": "${fileDirname}/../exe/${fileBasenameNoExtension}.exe",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]

    
}